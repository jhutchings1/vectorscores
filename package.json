{
  "name": "vectorscores",
  "version": "2.0.0",
  "description": "A series of new compositions built on the web",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "mkdir -p _site && npm run copy && npm run build:js && npm run build:css && eleventy",
    "build:debug": "DEBUG=Eleventy* npm run build",
    "build:css": "postcss assets/css/*.css --no-map --use postcss-import postcss-custom-properties --dir _site/assets/css",
    "build:js": "npm run build:js:vs; npm run build:js:scores",
    "build:js:vs": "rollup assets/js/vectorscores.js --format iife --name \"vectorscores\" --file _site/assets/js/vectorscores.js",
    "build:js:scores": "find scores -name 'index.js' | xargs -I {} rollup {} --format iife --file _site/{}",
    "css:lint": "stylelint assets/css/**/*.css",
    "css:fix": "npm run css:lint -- --fix",
    "copy": "npm run copy:docs; npm run copy:scores",
    "copy:docs": "rsync -R docs/README.md _includes",
    "copy:scores": "rsync -R scores/{*,*/*}/styles.css _site",
    "lint:fix": "prettier --write {.,_includes/layouts/*,pages,scores/*,scores/*/*}/*.js",
    "serve": "npm run build -- --serve --port=8081",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johnteske/vectorscores.git"
  },
  "keywords": [
    "music",
    "composition",
    "d3"
  ],
  "author": "John Teske",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/johnteske/vectorscores/issues"
  },
  "homepage": "https://github.com/johnteske/vectorscores#readme",
  "dependencies": {
    "@11ty/eleventy": "^0.7.0",
    "app-root-path": "^2.2.1",
    "postcss": "^7.0.17",
    "postcss-cli": "^6.1.3",
    "postcss-custom-properties": "^8.0.11",
    "postcss-import": "^12.0.1",
    "rollup": "^1.18.0"
  },
  "devDependencies": {
    "prettier": "^1.18.2",
    "stylelint": "^9.10.1",
    "stylelint-config-standard": "^18.3.0"
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  }
}
