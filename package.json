{
  "name": "vectorscores",
  "version": "2.0.0",
  "description": "A series of new compositions built on the web",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "npm run clean && npm run copy && npm run css && eleventy",
    "build:debug": "DEBUG=Eleventy* npm run build",
    "clean": "rm -rf _site",
    "css": "postcss assets/css/*.css --no-map --use postcss-import postcss-custom-properties --dir _site/assets/css",
    "css:lint": "stylelint assets/css/*.css",
    "css:fix": "npm run css:lint -- --fix",
    "copy": "mkdir -p _includes/docs && cp docs/README.md _includes/docs/README.md",
    "lint:fix": "prettier --write {.,pages}/*.js",
    "serve": "npm run build -- --serve --port=8081",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johnteske/vectorscores.git"
  },
  "keywords": [
    "music",
    "composition",
    "d3"
  ],
  "author": "John Teske",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/johnteske/vectorscores/issues"
  },
  "homepage": "https://github.com/johnteske/vectorscores#readme",
  "dependencies": {
    "@11ty/eleventy": "^0.7.0",
    "app-root-path": "^2.1.0",
    "postcss": "^7.0.14",
    "postcss-cli": "^6.1.1",
    "postcss-custom-properties": "^8.0.9",
    "postcss-import": "^12.0.1"
  },
  "devDependencies": {
    "prettier": "^1.15.3",
    "stylelint": "^9.10.1",
    "stylelint-config-standard": "^18.2.0"
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  }
}
